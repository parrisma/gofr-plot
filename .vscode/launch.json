{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run All Tests",
            "type": "node-terminal",
            "request": "launch",
            "command": "bash scripts/run_tests.sh",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Tests (Verbose)",
            "type": "node-terminal",
            "request": "launch",
            "command": "bash scripts/run_tests.sh -v",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug: MCP Server (No Auth)",
            "type": "debugpy",
            "request": "launch",
            "module": "app.main_mcp",
            "args": [
                "--port", "8001",
                "--no-auth"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "GOFR_PLOT_ENV": "TEST",
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug: MCP Server (With Auth)",
            "type": "debugpy",
            "request": "launch",
            "module": "app.main_mcp",
            "args": [
                "--port", "8001",
                "--jwt-secret", "test-secret-key-for-secure-testing-do-not-use-in-production",
                "--token-store", "${workspaceFolder}/logs/gofr-plot_tokens_test.json"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "GOFR_PLOT_ENV": "TEST",
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug: Web Server (No Auth)",
            "type": "debugpy",
            "request": "launch",
            "module": "app.main_web",
            "args": [
                "--port", "8000",
                "--no-auth"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "GOFR_PLOT_ENV": "TEST",
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug: Web Server (With Auth)",
            "type": "debugpy",
            "request": "launch",
            "module": "app.main_web",
            "args": [
                "--port", "8000",
                "--jwt-secret", "test-secret-key-for-secure-testing-do-not-use-in-production",
                "--token-store", "${workspaceFolder}/logs/gofr-plot_tokens_test.json"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "GOFR_PLOT_ENV": "TEST",
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Utility: Create Token",
            "type": "node-terminal",
            "request": "launch",
            "command": "bash scripts/token_manager.sh create --group test_group",
            "cwd": "${workspaceFolder}"
        }
    ]
}
